  <div class="row justify-content-center">
    <div class="col-lg-6">
      <div class="card border-0 shadow-lg">
        <div class="card-body">
          <h2 class="card-title text-center mb-4">Sign Up</h2>

          <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { class: "form" }) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>

            <div class="form-group">
              <%= f.label :email, class: "font-weight-bold" %>
              <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Enter your email" %>
            </div>

            <div class="form-group">
              <%= f.label :password, class: "font-weight-bold" %>
              <% if @minimum_password_length %>
              <em>(<%= @minimum_password_length %> characters minimum)</em>
              <% end %>
              <%= f.password_field :password, autocomplete: "new-password", class: "form-control", placeholder: "Enter your password" %>
            </div>

            <div class="form-group">
              <%= f.label :password_confirmation, class: "font-weight-bold" %>
              <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control", placeholder: "Confirm your password" %>
            </div>

            <div class="text-center">
              <%= f.submit "Sign up", class: "btn btn-primary btn-block mt-4" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>


<style>

.custom-card {
  max-width: 400px; /* adjust the width as needed */
  margin: 0 auto; /* center the card horizontally */
  margin-top: 20px; /* add some top margin for spacing */
}

</style>